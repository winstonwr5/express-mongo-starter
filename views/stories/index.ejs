        <!-- Overlay -->
        <div class="overlay"></div>
    </div>
            <h1>Stories Index Page</h1>
            <ul>
                <% for(let story of stories){ %>
                    <li>
                        <a href="/stories/<%=story._id; %>">
                            <%=story.title; %>
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>
        <footer>
